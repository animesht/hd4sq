            <%=<p>Stop "#{index + 1}"</p> %>
        </div><!--/note-->

        <div class="checkin">
            <div class="title">
                <h2><%= stop.name %></h2>
            </div><!--/title-->
            <div class="content">
				<p>content</p>
            </div><!--/content-->
        </div><!--/checkin-->
